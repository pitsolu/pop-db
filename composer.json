{
    "name": "popphp/pop-db",
    "description": "Pop Db Component for Pop PHP Framework",
    "keywords": [
        "database",
        "sql builder",
        "schema builder",
        "database migrations",
        "mysql",
        "postgresql",
        "sqlite",
        "sqlsrv",
        "pdo",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "http://www.popphp.org/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@nolainteractive.com",
            "homepage": "http://www.nolainteractive.com/"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "popphp/pop-debug": "^2.0.0",
        "popphp/pop-utils": "^2.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0.0"
    },
    "suggest": {
        "ext-mysqli": "*",
        "ext-pgsql": "*",
        "ext-sqlite3": "*",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Db\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Db\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.5.x-dev"
        }
    }
}
